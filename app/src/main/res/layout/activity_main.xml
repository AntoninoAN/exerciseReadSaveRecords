<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" tools:context="com.example.admin.w2d3_ex03.MainActivity">
    <EditText android:hint="TITLE:" android:id="@+id/et_Title" android:layout_width="match_parent" android:layout_height="wrap_content" />
    <EditText android:hint="SUBTITLE:" android:id="@+id/et_Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_updateValue"
        android:hint="UPDATE VALUE"/>
    <Button
        android:id="@+id/btn_SaveValue"
        android:text="@string/lbl_btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_ReadValue"
        android:text="@string/lbl_btn_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_UpdateValue"
    android:text="@string/lbl_btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<Button
        android:id="@+id/btn_DeleteValue"
    android:text="@string/lbl_btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_PresentValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
